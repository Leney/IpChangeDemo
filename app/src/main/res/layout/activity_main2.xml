<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dell.ipchangedemo.gui.MainActivity">

    <Button
        android:id="@+id/close_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭数据网络" />

    <Button
        android:id="@+id/open_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开数据网络" />

    <Button
        android:id="@+id/get_current_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取当前ip地址" />

    <TextView
        android:id="@+id/ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ip地址:" />

    <TextView
        android:id="@+id/ip_address_belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属：" />
</LinearLayout>
